<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Product Stock</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-0">
                            <select class="form-select" id="cmbLCNumber">
                                <option value="0">Select LC Number</option>
                                @foreach (var lc in lcFileList)
                                {
                                    <option value="@lc.Id">@lc.LCNumber</option>
                                }
                            </select>
                            <label for="cmbLCNumber">LC Number</label>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-floating mb-0">
                            <span type="text" class="form-control" id="spnProductName"></span>
                            <label for="spnProductName">Product Name</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating mb-0">
                            <span type="text" class="form-control" id="spnExporterName"></span>
                            <label for="spnExporterName">Exporter Name</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-floating mb-0">
                            <span class="form-control" id="spnTotalLCWeight"></span>
                            <label for="spnTotalLCWeight">Total LC Weight(Ton)</label>
                        </div>
                    </div> 
                    <div class="col-md-3">
                        <div class="form-floating mb-0">
                            <span class="form-control" id="spnTotalLCAmount"></span>
                            <label for="spnTotalLCAmount">Total LC Amount ($)</label>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-0">
                            <input class="form-control" id="txtTruckNo" placeholder="">
                            <label for="txtTruckNo">Truck No</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-0">
                            <input class="form-control" id="txtTotalBags" placeholder="">
                            <label for="txtTotalBags">Total Bags</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-0">
                            <input class="form-control" id="txtUsdRate" placeholder="">
                            <label for="txtUsdRate">USD Rate (Tk)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-0">
                            <input class="form-control" id="txtTotalBags" placeholder="">
                            <label for="txtTotalBags">Total Price (Tk)</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="button" id="btnSubmit" data-id="0" class="btn btn-light-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
