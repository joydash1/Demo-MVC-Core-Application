@using ERP.DataAccess.Domains
@{
    ViewData["Title"] = "Bulk Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .row {
        margin-top: 10px !important;
    }
</style>
<div class="card my-5">
    <div class="card-body">
        <div class="mb-4">
            <h3 class="mb-2"><b>Bulk Insert From Excel To Database.</b></h3>
        </div>
        <hr />
        <form method="post" asp-controller="BasicSetup" asp-action="Import" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <label for="fileName"><b>Excel File:</b></label>
                    <input type="file" name="File" id="file" class="form-control" accept=".xlsx,.xls" required />
                </div>
                <div class="col-md-12 text-center mt-4">
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>